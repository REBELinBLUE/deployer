# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.php]
max_line_length = 120

[*.{js,jsx}]
indent_size = 2
max_line_length = 120

[*.{yml,json,babelrc,eslintrc}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
